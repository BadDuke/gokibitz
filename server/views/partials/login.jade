.modal-header
	h3.modal-title Login

.modal-body
	form.form-horizontal.form-signin(
		name='form'
		ng-submit='login(form)'
		novalidate
		role='form'
	)

		p.help-block(ng-show="form.email.$error.mongoose") {{ errors.email }}
		p.help-block(ng-show="form.password.$error.mongoose") {{ errors.password }}

		.form-group(ng-class="{'has-error': form.email.$error.mongoose || (form.email.$error.email && form.email.$touched)}")
			label.col-sm-4.control-label(for='login-email') Email address:
			.col-sm-8
				input#login-email.form-control(
					placeholder='Email address'
					type='email'
					name='email'
					ng-model='user.email'
					required
					mongoose-error
				)

		.form-group(ng-class="{'has-error': form.password.$error.mongoose}")
			label.col-sm-4.control-label(for='login-password') Password:
			.col-sm-8
				input#login-password.form-control(

					placeholder='Password'
					type='password'
					name='password'
					ng-model='user.password'
					required
					mongoose-error
				)

		.form-group.has-error(ng-show='form.password.$error.mongoose')
			.col-sm-offset-4.col-sm-8
				p.help-block {{ error.other }}

		.row
			.col-sm-offset-4.col-sm-8
				p.help-block: a(ng-click='forgotPassword()') Forgot your password?

		//-p Don't have an account, yet?
			//-= ' '
			//-a(ng-click='cancel(signupModal);') Sign up!

		button.hidden(type='submit') Log in

.modal-footer
	button.btn.btn-primary(ng-click='login(form)') Log in
	button.btn.btn-default(ng-click='cancel()') Cancel
